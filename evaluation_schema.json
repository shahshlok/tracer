{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evaluation Result",
  "description": "Schema for a single student evaluation result comparing GPT-5 Nano and GPT-OSS 120B grading",
  "type": "object",
  "required": ["student", "gpt5_nano_result", "gpt_oss_120b_result", "metrics"],
  "properties": {
    "student": {
      "type": "string",
      "description": "Student identifier",
      "minLength": 1
    },
    "gpt5_nano_result": {
      "type": ["object", "null"],
      "description": "Grading result from GPT-5 Nano model (may be null if the model response was unusable)",
      "required": ["total_score", "max_possible_score", "overall_feedback"],
      "properties": {
        "total_score": {
          "type": "number",
          "minimum": 0
        },
        "max_possible_score": {
          "type": "number",
          "minimum": 0
        },
        "overall_feedback": {
          "type": "string"
        }
      }
    },
    "gpt_oss_120b_result": {
      "type": "object",
      "description": "Grading result from GPT-OSS 120B model",
      "required": ["total_score", "max_possible_score", "overall_feedback"],
      "properties": {
        "total_score": {
          "type": "number",
          "minimum": 0
        },
        "max_possible_score": {
          "type": "number",
          "minimum": 0
        },
        "overall_feedback": {
          "type": "string"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Computed metrics comparing the two grading results",
      "required": ["gpt5_nano", "gpt_oss_120b", "avg_pct", "diff_pct", "flag", "comment"],
      "properties": {
        "gpt5_nano": {
          "type": "object",
          "required": ["total", "max", "pct"],
          "properties": {
            "total": {
              "type": ["number", "null"],
              "minimum": 0
            },
            "max": {
              "type": ["number", "null"],
              "minimum": 0
            },
            "pct": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "gpt_oss_120b": {
          "type": "object",
          "required": ["total", "max", "pct"],
          "properties": {
            "total": {
              "type": ["number", "null"],
              "minimum": 0
            },
            "max": {
              "type": ["number", "null"],
              "minimum": 0
            },
            "pct": {
              "type": ["number", "null"],
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "avg_pct": {
          "type": ["number", "null"],
          "description": "Average percentage across both models",
          "minimum": 0,
          "maximum": 100
        },
        "diff_pct": {
          "type": ["number", "null"],
          "description": "Absolute difference in percentage between the two models"
        },
        "flag": {
          "type": "string",
          "description": "Visual flag indicating agreement (âœ…) or disagreement (ðŸš©)"
        },
        "comment": {
          "type": "string",
          "description": "Human-readable comment about the comparison"
        }
      }
    }
  }
}
