{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evaluation Schema",
  "description": "Schema for validating student evaluation data",
  "type": "object",
  "required": ["student", "gpt5_nano_result", "gpt_oss_120b_result", "metrics"],
  "properties": {
    "student": {
      "type": "string",
      "minLength": 1,
      "description": "Student identifier in format: LastName_FirstName_ID"
    },
    "gpt5_nano_result": {
      "type": "object",
      "required": ["total_score", "max_possible_score", "overall_feedback"],
      "properties": {
        "total_score": {
          "type": "number",
          "minimum": 0,
          "description": "Total score awarded by GPT-5 Nano"
        },
        "max_possible_score": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum possible score"
        },
        "overall_feedback": {
          "type": "string",
          "description": "Feedback from GPT-5 Nano"
        }
      },
      "additionalProperties": false
    },
    "gpt_oss_120b_result": {
      "type": "object",
      "required": ["total_score", "max_possible_score", "overall_feedback"],
      "properties": {
        "total_score": {
          "type": "number",
          "minimum": 0,
          "description": "Total score awarded by GPT-OSS-120B"
        },
        "max_possible_score": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum possible score"
        },
        "overall_feedback": {
          "type": "string",
          "description": "Feedback from GPT-OSS-120B"
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "required": ["gpt5_nano", "gpt_oss_120b", "avg_pct", "diff_pct", "flag", "comment"],
      "properties": {
        "gpt5_nano": {
          "type": "object",
          "required": ["total", "max", "pct"],
          "properties": {
            "total": {
              "type": "number",
              "minimum": 0
            },
            "max": {
              "type": "number",
              "minimum": 0
            },
            "pct": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          },
          "additionalProperties": false
        },
        "gpt_oss_120b": {
          "type": "object",
          "required": ["total", "max", "pct"],
          "properties": {
            "total": {
              "type": "number",
              "minimum": 0
            },
            "max": {
              "type": "number",
              "minimum": 0
            },
            "pct": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          },
          "additionalProperties": false
        },
        "avg_pct": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Average percentage across both models"
        },
        "diff_pct": {
          "type": "number",
          "description": "Percentage point difference between models"
        },
        "flag": {
          "type": "string",
          "description": "Flag emoji indicating agreement/disagreement"
        },
        "comment": {
          "type": "string",
          "description": "Comment about model agreement"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
